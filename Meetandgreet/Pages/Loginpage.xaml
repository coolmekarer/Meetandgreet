<Page x:Class="Meetandgreet.Pages.Loginpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Meetandgreet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Loginpage">

    <Grid>
        <Image Source="/Images/adamandeve1.jpg" 
   Stretch="UniformToFill" />

       
        <Border VerticalAlignment="Center" HorizontalAlignment="Center" 
                Width="350" Padding="30" CornerRadius="20"
                Background="#44000000" BorderBrush="#33FFFFFF" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Black" Opacity="0.9" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Welcome Back" 
                           Foreground="White" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Login to find your match" 
                           Foreground="#F7E7CE" FontSize="14" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Email Address" Foreground="White" FontSize="12" Margin="5,0,0,5"/>
                <TextBox x:Name="EmailInput" Height="40" Margin="0,0,0,20"
                         Background="#22FFFFFF" Foreground="White" BorderBrush="#F7E7CE"
                         VerticalContentAlignment="Center" Padding="10,0" BorderThickness="1">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="Password" Foreground="White" FontSize="12" Margin="5,0,0,5"/>
                <PasswordBox x:Name="PasswordInput" Height="40" Margin="0,0,0,30"
                             Background="#22FFFFFF" Foreground="White" BorderBrush="#F7E7CE"
                             VerticalContentAlignment="Center" Padding="10,0" BorderThickness="1">
                    <PasswordBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <Button Content="SIGN IN" 
                        Height="50" Background="#FF4D4D" Foreground="White" 
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Command="{Binding LoginCommand}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Back" 
        Click="BackButton_Click"
        Foreground="#F7E7CE" 
        Margin="0,15,0,0" 
        Cursor="Hand"
        Background="Transparent"
        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
