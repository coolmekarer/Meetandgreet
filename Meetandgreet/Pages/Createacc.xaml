<Page x:Class="Meetandgreet.Pages.Createacc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Meetandgreet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Createacc">

    <Grid>
        <Image Source="/Images/adamandeve1.jpg" Stretch="UniformToFill" />
        
        <Viewbox Stretch="Uniform" MaxHeight="800">
            <Border VerticalAlignment="Center" HorizontalAlignment="Center" 
                Width="420" Padding="30" CornerRadius="30"
                Background="#CC1A1A1A" BorderBrush="#33FFFFFF" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="50" Color="Black" Opacity="0" ShadowDepth="0"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Join the Garden" Foreground="White" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Start your journey to find 'The One'" Foreground="#F7E7CE" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,25"/>

                    <TextBlock Text="Full Name" Foreground="White" FontSize="12" Margin="5,0,0,3"/>
                    <TextBox Height="35" Margin="0,0,0,12" Background="#33FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#66F7E7CE" VerticalContentAlignment="Center" Padding="10,0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Email" Foreground="White" FontSize="12" Margin="5,0,0,3"/>
                    <TextBox Height="35" Margin="0,0,0,12" Background="#33FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#66F7E7CE" VerticalContentAlignment="Center" Padding="10,0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="I am..." Foreground="White" FontSize="12" Margin="5,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <RadioButton Content="Male" Foreground="White" Margin="0,0,15,0" IsChecked="True"/>
                        <RadioButton Content="Female" Foreground="White" Margin="0,0,15,0"/>
                        <RadioButton Content="Non-Binary" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="Create Password" Foreground="White" FontSize="12" Margin="5,0,0,3"/>
                    <PasswordBox Height="35" Margin="0,0,0,20" Background="#33FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#66F7E7CE" VerticalContentAlignment="Center" Padding="10,0">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                  

                    <Button Content="GET STARTED" Height="50" Background="#FF4D4D" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</Page>
