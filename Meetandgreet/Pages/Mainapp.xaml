<Page x:Class="Meetandgreet.Pages.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Meetandgreet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <Grid>
        <Image Source="/Images/adamandeve1.jpg" 
           Stretch="UniformToFill" />

        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#4DFFF8E1" Offset="0" />
                    <GradientStop Color="#80FFB300" Offset="0.6" />
                    <GradientStop Color="#CCFB8C00" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/Images/apple1.png" 
               Width="130" Height="120" 
               HorizontalAlignment="Center" 
               Margin="0,0,0,10"
               RenderOptions.BitmapScalingMode="HighQuality">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="40" Color="#FFD700" Opacity="0.6" ShadowDepth="0"/>
                </Image.Effect>
            </Image>

            <TextBlock Text="MeetAndGreet" 
                   FontSize="56" 
                   FontWeight="ExtraBold" 
                   Foreground="White" 
                   HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="12" Color="#E65100" ShadowDepth="3" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="find your true love...Or not ;)" 
                   Foreground="White" 
                   FontSize="18" 
                   FontStyle="Italic"
                   Margin="0,0,0,45" 
                   HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" Color="#80000000" Opacity="0.3" ShadowDepth="1"/>
                </TextBlock.Effect>
            </TextBlock>

            <Button Content="CREATE ACCOUNT" 
                Click="CreateAccount_Click"
                Width="260" Height="55" 
                Background="#FF4D4D" Foreground="White" 
                FontWeight="Bold" BorderThickness="0" 
                Margin="0,0,0,15"
                Cursor="Hand"
                RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1" />
                </Button.RenderTransform>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="27"/>
                    </Style>
                </Button.Resources>

                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                             Storyboard.TargetProperty="ScaleX"
                                             To="1.05" Duration="0:0:1.2" />
                                <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                             Storyboard.TargetProperty="ScaleY"
                                             To="1.05" Duration="0:0:1.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>

                <Button.Effect>
                    <DropShadowEffect BlurRadius="20" Color="#FF4D4D" Opacity="0.4" ShadowDepth="0"/>
                </Button.Effect>
            </Button>

            <Button Content="LOG IN" 
                Width="260" Height="55" 
                Background="Transparent" Foreground="White" 
                FontWeight="Bold" BorderBrush="White" BorderThickness="2"
                Cursor="Hand" Click="Button_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="27"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
