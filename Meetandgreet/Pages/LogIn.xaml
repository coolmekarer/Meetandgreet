<Page x:Class="Meetandgreet.Pages.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Meetandgreet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <Grid>
        <Image Source="/Images/adamandeve1.jpg" 
           Stretch="UniformToFill">
          
        </Image>

        <Border Background="DarkOrange" Opacity="0.1"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/Images/apple1.png" 
       Width="130" 
       Height="120" 
       HorizontalAlignment="Center" 
       Margin="0,0,0,0"
       RenderOptions.BitmapScalingMode="HighQuality" RenderTransformOrigin="0.505,0.935"/>

            <TextBlock Text="MeetAndGreet" 
                   FontSize="48" 
                   FontWeight="ExtraBold" 
                   Foreground="White" 
                   Opacity="0.6"
                   Margin="0,0,0,5"
                   HorizontalAlignment="Center"/>

            <TextBlock Text="find your true love...Or not ;)" 
                   Foreground="White" 
                   FontSize="16" 
                   Margin="0,0,0,30" 
                   Opacity="0.8"/>

            <Button Content="CREATE ACCOUNT" 
                Width="250" Height="50" 
                Background="#B91A1D" Foreground="White" 
                FontWeight="Bold" BorderThickness="0" 
                Margin="0,0,0,15">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="LOG IN" 
                Width="250" Height="50" 
                Background="Transparent" Foreground="White" 
                FontWeight="Bold" BorderBrush="White" BorderThickness="2">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
